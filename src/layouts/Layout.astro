---
import "bootswatch/dist/cosmo/bootstrap.min.css";
import NavBar, { NavItem } from "@components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const items: NavItem[] = [
  {
    title: "About",
    href: "/about/",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <NavBar brand={{ title, href: "/" }} items={items} />
    </header>
    <main>
      <h1>{title}</h1>
      <slot />
    </main>
  </body>
</html>
