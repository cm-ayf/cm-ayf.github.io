{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/strict",
    "plugin:import/recommended",
    "plugin:astro/all",
    "plugin:astro/jsx-a11y-strict",
    "prettier"
  ],
  "settings": {
    "import/resolver": "typescript"
  },
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    }
  ]
}
